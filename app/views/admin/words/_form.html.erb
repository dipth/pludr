<%= form_with(model: [:admin, @word], class: "space-y-4 md:space-y-6") do |f| %>
  <%= form_errors(@word) %>

  <div>
    <%= f.label :value, class: "block mb-2 text-sm font-medium text-gray-800 dark:text-white" %>
    <%= f.text_field :value, class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5", required: true %>
  </div>

  <%= f.submit t(".save"), class: "w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
<% end %>
