<% if alert = flash[:alert] %>
  <div id="alert" class="p-4 text-red-800 bg-red-50 flex items-center" role="alert">
    <div class="flex items-center">
      <%= icon "alert-hexagon", variant: "filled", class: "w-5 h-5 me-2", aria: { hidden: true } %>
      <%= alert %>
    </div>
    <button type="button" class="ms-auto -mx-1.5 -my-1.5 p-1.5 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500" data-dismiss-target="#alert" aria-label="<%= t(".close") %>">
      <span class="sr-only"><%= t(".close") %></span>
      <%= icon "x", variant: "outline", class: "w-3 h-3", aria: { hidden: true } %>
    </button>
  </div>
<% end %>

<% if notice = flash[:notice] %>
  <div id="notice" class="p-4 text-green-800 bg-green-50 flex items-center" role="alert">
    <div class="flex items-center">
      <%= icon "info-circle", variant: "filled", class: "w-5 h-5 me-2", aria: { hidden: true } %>
      <%= notice %>
    </div>
    <button type="button" class="ms-auto -mx-1.5 -my-1.5 p-1.5 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500" data-dismiss-target="#notice" aria-label="<%= t(".close") %>">
      <span class="sr-only"><%= t(".close") %></span>
      <%= icon "x", variant: "outline", class: "w-3 h-3", aria: { hidden: true } %>
    </button>
  </div>
<% end %>
